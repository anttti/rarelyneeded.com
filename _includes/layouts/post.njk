---
layout: layouts/base.njk
---

<h1>{{ title }}</h1>

<small><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time> by Antti</small>

{{ content | safe }}

{% if tags | filterTagList | length %}
<p>
  <small>Posted in
    {%- for tag in tags | filterTagList %}
    {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
    <a href="{{ tagUrl }}">#{{ tag | slugify }}</a>
    {%- endfor %}
  </small>
</p>
{% endif %}
