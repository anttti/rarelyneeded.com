---
layout: layouts/base.njk
---

<a href="#skip" class="visually-hidden">Skip to main content</a>

{% include "navigation.njk" %}

<main id="skip">
  <h1>{{ title }}</h1>

  <small><time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time></small>

  {{ content | safe }}

  {% if tags | filterTagList | length %}
  <p>
    <small>Posted in
      {%- for tag in tags | filterTagList %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <a href="{{ tagUrl }}">#{{ tag | slugify }}</a>
      {%- endfor %}
    </small>
  </p>
  {% endif %}

  {%- if collections.posts %}
  {%- set previousPost = collections.posts | getPreviousCollectionItem %}
  {%- set nextPost = collections.posts | getNextCollectionItem %}
  {%- if nextPost or previousPost %}
  <p>
    <small>
    {%- if previousPost %}Previous: <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>{% endif %}
    {%- if nextPost %}<br />Next: <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>{% endif %}
    </small>
  </p>
  {%- endif %}
  {%- endif %}
</main>
